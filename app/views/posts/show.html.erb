<p style="color: green"><%= notice %></p>
<%= render @post %>
<div class='p-2'>
  <%= button_to "Edit this post", edit_post_path(@post), method: :get, class: "btn btn-primary p-3" %>
</div>
<div class='p-2'>
  <%= button_to "Back to posts", posts_path, method: :get, class: 'btn btn-secondary p-3' %>
</div>
<div class='p-2'>
  <%= button_to "Destroy this post", @post, method: :delete, class: 'btn btn-outline-danger p-3' %>
</div>
